<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff568eae">

    <TextView android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dialog_padding_material" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/spotify_streamer"
        android:onClick="spotify"
        android:id="@+id/spotifyButton"
        android:background="#ffffd13c"
        android:padding="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/scores_app"
        android:onClick="scores"
        android:id="@+id/scoresButton"
        android:background="#ffffd13c"
        android:padding="15dp"
        android:layout_below="@+id/spotifyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/library_app"
        android:onClick="library"
        android:id="@+id/libraryButton"
        android:background="#ffffd13c"
        android:padding="15dp"
        android:layout_below="@+id/scoresButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/build_it_bigger"
        android:onClick="build"
        android:id="@+id/buildButton"
        android:background="#ffffd13c"
        android:layout_below="@+id/libraryButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/xyz_reader"
        android:onClick="xyz"
        android:id="@+id/xyzButton"
        android:background="#ffffd13c"
        android:padding="15dp"
        android:layout_below="@+id/buildButton"
        android:layout_marginBottom="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/my_own_app"
        android:onClick="myOwnApp"
        android:id="@+id/myOwnAppButton"
        android:background="#ffff070b"
        android:padding="15dp"
        android:layout_below="@+id/xyzButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
