<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ff568eae">

    <TextView android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_dialog_padding_material"/>
    <Button
        style="@style/lessonButton"
        android:id="@+id/spotifyButton"
        android:text="@string/spotify_streamer"
        android:onClick="spotify"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp" />

    <Button
        style="@style/lessonButton"
        android:id="@+id/scoresButton"
        android:text="@string/scores_app"
        android:onClick="scores"
        android:layout_below="@+id/spotifyButton" />

    <Button
        style="@style/lessonButton"
        android:id="@+id/libraryButton"
        android:text="@string/library_app"
        android:onClick="library"
        android:layout_below="@+id/scoresButton" />

    <Button
        style="@style/lessonButton"
        android:id="@+id/buildButton"
        android:text="@string/build_it_bigger"
        android:onClick="build"
        android:layout_below="@+id/libraryButton" />

    <Button
        style="@style/lessonButton"
        android:id="@+id/xyzButton"
        android:text="@string/xyz_reader"
        android:onClick="xyz"
        android:layout_below="@+id/buildButton" />

    <Button
        style="@style/lessonButton.ownButton"
        android:id="@+id/myOwnAppButton"
        android:text="@string/my_own_app"
        android:onClick="myOwnApp"
        android:layout_below="@+id/xyzButton" />

</RelativeLayout>
